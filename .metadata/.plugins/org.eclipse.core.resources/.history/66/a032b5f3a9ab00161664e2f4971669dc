package com.mule.custom.kcs;

import java.util.HashMap;
import java.util.LinkedHashMap;

public class TransformMap {
	
	//private HashMap<String, String> map = new HashMap();
	//private String outStr;
	//private String value;
	public String decode64 (String str) {
		
		return str + "abc";
	}
	
	public String translate (String str) {
		
		return str + "def";
	}
	
	public HashMap doTransform(HashMap<String, String> items) {
	
		String key;
		String val;
		
		for (HashMap.Entry entry : items.entrySet()) {
			key = entry.getKey() + "";
			val = entry.getValue() + "";
			
			
		}
			
		value = hashMap.get(key);
		byte[] decodedValue = java.util.Base64.getDecoder().decode(value);
		value = new String (decodedValue);
		
		switch (key) {
			case "11": outStr = "Eleven";
				break;
			case "12": outStr = "Twelve";
				break;
			case "13": outStr = "Thirteen";
				break;
			case "14": outStr = "Fourteen";
				break;
			default: outStr = "empty";
			}
		
		map.put(outStr, value);
		return map;
	}

}
