	}
	
	public HashMap doTransform(HashMap<String, String> items) {
	
		String key;
		String val;
		
		for (HashMap.Entry entry : items.entrySet()) {
			key = decode64(entry.getKey() + "");
			val = translate(entry.getValue() + "");

			items.put(key, val);
		}
		return items;
	}

}
